<!DOCTYPE html>
<html>
	<head>
		<% include ../partials/head %>
		<link rel="stylesheet" href="/stylesheets/index.css">
		<script src="javascripts/bingmap.js"></script>
	</head>
	<body onload="getMap(39,116,'Register-Bing-Map')">
		<div class="container">
			<div class="center" id="logo-container">
				<img src="/images/logo.png" id="logo">
			</div>
			<div class="row">
				<div class="col-md-5">
					<div id="login-register">
						<h1>Register</h1>
						<p>Please enter the required information</p>
						<p class="errormsg">
							<% if(message){ %>
								<%= message %>
							<% } %>
						</p>
						<form role="form" action="/register" method="post" onsubmit="return formValidation()">
							<div class="form-group">
								<input class="form-control" type="text" name="username" placeholder="Enter Username" required>
							</div>
							<div class="form-group">
								<input class="form-control" type="password" name="password" placeholder="Enter Password" required>
							</div>
							<div class="form-group">
								<input class="form-control" type="password" name="confirm-password" placeholder="Confirm Your Password">
							</div>
							<div class="form-group">
								<input class="form-control" id="form-geolocation" type="text" name="geoLocation" placeholder="Enter your location" required>
							</div>
							<div class="form-group-hidden">
								<input id="geoX" type="text" name="geoX">
								<input id="geoY" type="text" name="geoY">
								<input id="country" type="text" name="country">
								<input id="city" type="text" name="city">
							</div>
							<button class="btn btn-success" type="button" onclick="setGeoLocation('form-geolocation')">Confirm Location</button>
							<button class="btn btn-success" type="submit">Submit</button>
							<a href="/">
								<button class="btn btn-success" type="button">Cancel</button>
							</a>
						</form>
					</div>
				</div>
				<div class="col-md-7">
					<div class="BingMap" id="Register-Bing-Map">
					</div>
				</div>
			</div>
			<div id="confirm-geolocation" class="float-info">
				<p class="info"></p>
				<button class="btn btn-success btn-lg" onclick="confirmGeoLocation('confirm-geolocation')">Yes</button>
				<button class="btn btn-success btn-lg" onclick="displayResult()">No</button>
			</div>
			<% include ../partials/popups %>
		</div>
	</body>
</html>